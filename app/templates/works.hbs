<div class="jumbo">
  <div class="right tomster"></div>
  <h2>Welcome!</h2>
  <p>We hope you find exactly what you're looking for in a place to stay.</p>
  {{#link-to 'about' class="button"}}
    About Us
  {{/link-to}}
</div>

{{#list-filter
   filter=(action 'filterByCategory')
   as |works|}}
  <ul class="results">
    {{#each works as |workUnit|}}
      <li>{{work-listing work=workUnit}}</li>
    {{/each}}
  </ul>
{{/list-filter}}
